function validateCard(value, column) {        
        if (value.length != 5) {
            return [false, "请输入5位卡号"];
        }
        else {
            var myurl = "@Url.Action("IsHaveCardNo", "Card")";

            var json = (function () {
            var json = null;
            $.ajax({
                "type": "GET",
                "async": false,
                "global": false,
                "url": myurl,
                "data":"cardNo="+value,
                "dataType": "json",
                "success": function (data) {
                    json = data;
                    }
                });
                return json;
            })(); 
            if(json.IsCard)return [false, "卡号已存在"];
            if (!PutCard(value)) return [false, "发卡失败"];
            return [true, ""];
        }
    }
</script>

